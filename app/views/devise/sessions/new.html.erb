<%= render partial: 'shared/header'%>
<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>
        <%= form_with model: @user, url:  new_user_session_path, local: true do |f| %>
          
            <div class='login-flash-message'>
              <%= flash[:notice] %>
              <%= flash[:alert] %>
            </div>
        <div class="field">
          <%= f.label :email, "email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "password(6 characters or more)" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Login", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
